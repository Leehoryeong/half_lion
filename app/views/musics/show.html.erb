<%= image_tag @music.image.url(:medium) %>
<br>
<%= @music.title %>
<br>
<%= @music.content %>
<br>
<% a = ["기쁨", "슬픔", "그리움", "화남", "외로움"] %>
<% (0..4).each do |n| %>
    <% if @music.theme == a[n] %>
    <%= link_to @music.theme, "/theme#{n}" %>
    <% end %>
<% end %>
    

<% if current_user == @music.user %>
    <%= link_to 'edit', edit_music_path %>
    <%= link_to 'delete', music_path, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>



<td><%= link_to '[좋아요]', up_vote_path(@music.id) %></td>
<td><%= @music.get_upvotes.size %></td>
<td><%= link_to '[싫어요]', down_vote_path(@music.id) %></td>


