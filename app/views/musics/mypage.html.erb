

<%= @user.name %>

<% a = ["기쁨", "슬픔", "그리움", "화남", "외로움"] %>
  <% (0..4).each do |n| %> 
    <%= a[n] %><hr>
      <% @user.musics.each do |music| %>
        <% if music.theme == a[n] %> 
          <%= music.title %>
          <%= link_to (image_tag music.image.url), music %>
        <% end %>
  <% end %>
<% end %>






